<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.asis.finalproject.imageoftheday.ListOfImagesOfTheDay"
    >

    <ListView
        android:id="@+id/chat"
        android:layout_width="300dp"
        android:layout_height="match_parent">
    </ListView>

    <LinearLayout
        android:id="@+id/LinearLayoutTablet"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_alignBottom="@id/chat">

        <TextView
            android:id="@+id/textViewDateInfoImageOfTheDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textviewSelectDate"
            android:textAlignment="center"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/DateImageOfTheDay"
            android:clickable="true"
            android:hint="@string/birthday"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:focusable="false"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/getImageImageOfTheDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/getImageOfTheDay" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/LinearLayoutTablet">
    </FrameLayout>

</RelativeLayout>