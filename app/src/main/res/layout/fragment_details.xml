<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewFragmentId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:id="@+id/textViewFragmentTitle"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textViewFragmentId"/>

    <TextView
        android:text="Date= "
        android:id="@+id/textViewFragmentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textViewFragmentTitle"
        />

    <TextView
        android:text="URL= "
        android:id="@+id/textViewFragmentUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewFragmentDate"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        />

    <ImageView
        android:text="Explanation= "
        android:id="@+id/imageViewFragmentImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textViewFragmentUrl"
        />

    <Button
        android:id="@+id/buttonHideFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Hide" />
</RelativeLayout>